<div class="container">
        <div class="jumbotron shadow">
            <% if(search=='program') { %>
                <h1>Search For A Program</h1>
                <form action="search/results" method="GET" style="padding-top: 20px;">
                <div class="form-group">
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="program" placeholder="Program Name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>
                </form>     
            <% } else { %>   
                <h1>Search For A User</h1>
                <form method="GET" action="search/results" style="padding-top: 20px;">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="username" placeholder="Username" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>
                </form>
            <% } %>
        </div>
    </div>
