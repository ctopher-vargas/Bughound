<% include ../partials/head %>
    
    <div class="container content_body">
        <div class="jumbotron shadow">
            <h1>Areas</h1>
        </div>
        <table class="table table-striped table-bordered">
          <thead class="thead-dark">
                <tr>
                    <th>Area ID</th>
                    <th>Program ID</th>
                    <th>Area</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% areas.forEach(function(area) { %>
                <tr>
                    <form action="/areas/<%=id%>/<%=area.area_id%>?_method=PUT" method="POST">
                        <td><%= area.area_id %></td>
                        <td><%= id %></td>
                        <td><input type="text" value="<%=area.area %>" name="updateAreaTxt" class="form-control" required="required"></td>
                        <td><button type="submit" class="btn btn-primary">Update</button></td>
                    </form>
                    <td>
                        <form action="/areas/<%=id%>/<%=area.area_id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
                <tr>
                    <form action="/areas/<%=id%>" method="POST">
                        <td>Area</td>
                        <td><%= id %>
                        <td><input type="text" name="area" class="form-control" required="required"></td>
                        <td><button type="submit" class="btn btn-success">Add area</button></td>
                    </form>
                </tr>
            </tbody>
        </table>
        <a class="btn btn-danger" href="/dbmaintance" role="button">Cancel</a>
    </div>

<% include ../partials/footer %>
